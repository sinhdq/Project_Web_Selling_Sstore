@page
@model SstoreClient.Pages.CheckOTPModel
@{
    ViewData["Title"] = "Check OTP";
}
<div class="login-wrap">
            <div class="login-html">
                  <p style="color:Tomato;">@Model.message</p>
                <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab"></label>
                <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
                <div class="login-form" >
                    <form method="post">
                        <div class="sign-in-htm">
                            <div class="group">
                                <label for="user" class="label">OTP</label>
                                <input id="user" type="text" class="input" name = "otp">
                            </div>
                            <div class="group">
                                <input type="submit" class="button" value="Submit" name="submit">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>