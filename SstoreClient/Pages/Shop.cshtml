@page
@model SstoreClient.Pages.ShopModel
@{
    ViewData["Title"] = "Shop";
}
<div id="preloder">
            <div class="loader"></div>
        </div>

        <!-- Hero Section Begin -->
        <section class="hero hero-normal">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="hero__categories">
                            <div class="hero__categories__all">
                                <i class="fa fa-bars"></i>
                                <span>All Categorires</span>
                            </div>
                            
                                <ul>
                                    @foreach (var item in Model.listcategory) {
                                        <li><a asp-page="Shop" asp-route-categoryid="@item.Id">@item.CategoryName</a></li>
                                    }
                                     <li><a asp-page="Shop" asp-route-categoryid="">All categories</a></li>
                                </ul>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="hero__search">
                            <div class="hero__search__form">
                                <form asp-page-handler="Fillter" method = "post">
                                    <div class="hero__search__categories">
                                        All Categories
                                        <span class="arrow_carrot-down"></span>
                                    </div>
                                    <input type="text" placeholder="What do you need?" name="nameproduct">
                                    <button type="submit" class="site-btn">SEARCH</button>
                                </form>
                            </div>
                            <div class="hero__search__phone">
                                <div class="hero__search__phone__icon">
                                    <i class="fa fa-phone"></i>
                                </div>
                                <div class="hero__search__phone__text">
                                    <h5>0917076864</h5>
                                    <span>support 24/7 time</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="featured spad">
            <div class="container">
                    <div class="row featured__filter" >
                        @foreach (var item in Model.productlist) {
                    @if (item.Quantity > 0)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 mix fastfood vegetables">
                            <div class="featured__item">
                                <div class="featured__item__pic set-bg" data-setbg="image/@item.Image">
                                    <ul class="featured__item__pic__hover"> 
                                        <li><a href="Shop?sstore=AddToCart&productid=@item.Id&quantity=1"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="featured__item__text">
                                    <h6><a href="ProductDetail?idp=@item.Id">@item.ProductName</a></h6>
                                    <h5>@item.Price VND</h5>
                                </div>
                            </div>
                        </div>
                    }
                }
                    </div>
            </div>
        </section>