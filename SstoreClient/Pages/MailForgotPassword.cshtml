@page
@model SstoreClient.Pages.MailForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}
<!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>
    
    <section class="checkout spad">
        <div class="container">
            <div class="checkout__form">
                <h4>Fogot Password</h4>
                <p style="color:Tomato;">@Model.message</p>
                <form  method="post">
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                           
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="checkout__input">
                                        <p>Email<span>*</span></p>
                                        <input type="email" name="email">
                                    </div>
                                </div>
                            </div>

                             <button type="submit" class="site-btn" name="submit">SUBMIT</button>            
                    </div>
                </form>
                 
            </div>
        </div>
    </section>