@page
@model ManagerClient.Pages.UpdateProductModel
@{
    ViewData["Title"] = "Update Product";
}
 <!-- Page Preloder -->
        <div id="preloder">
            <div class="loader"></div>
        </div>
        <section class="checkout spad">
            <div class="container">
                <div class="checkout__form">
                    <p style="color:Tomato;">@Model.message</p>
                    <form method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-8 col-md-6">
                                <div class="row">
                                    <div class="col-lg-9">
                                        <div class="checkout__input">
                                            <p>Product Name<span>*</span></p>
                                            <input type="text" name = "pname" value="@Model.product.ProductName">
                                            <input type="hidden" name = "pid" value="@Model.product.Id">
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="checkout__input">
                                            <p>Department<span>*</span></p>
                                            <select name="department" class="checkout__input">
                                               @foreach(var item in Model.listcategory){
                                                   if(item.CategoryName.Equals(Model.product.CategoryName)){
                                                    <option selected value="@item.Id">@item.CategoryName</option>
                                                   }else{
                                                       <option value="@item.Id">@item.CategoryName</option>
                                                   }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="checkout__input">
                                            <p>Quantity<span>*</span></p>
                                            <input type="number" name = "quantity" value="@Model.product.Quantity" min="1">
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="checkout__input">
                                            <p>Price<span>*</span></p>
                                            <input type="text" name = "price" value="@Model.product.Price">
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="checkout__input">
                                            <p>Image<span>*</span></p>
                                             <input asp-for="@Model.FileUploads"/>
                                            
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="checkout__input">
                                            <p>Description<span>*</span></p>
                                            <input type="text" name = "description" value="@Model.product.Description">
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-4 col-md-6">
                                <div class="checkout__order">
                                     <img class="product__details__pic__item--large" src="image/@Model.product.Image" alt="">
                                    <button type="submit" class="site-btn" name="submit">UPDATE</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>