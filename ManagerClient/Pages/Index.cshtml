@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="preloder">
            <div class="loader"></div>
        </div>
        <section class="hero hero-normal">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="hero__categories">
                            <div class="hero__categories__all">
                                <i class="fa fa-bars"></i>
                                <span>All Department</span>
                            </div>
                                 <ul>
                                    @foreach (var item in Model.listcategory) {
                                        <li><a asp-page="Index" asp-route-categoryid="@item.Id">@item.CategoryName</a></li>
                                    }
                                     <li><a asp-page="Index" asp-route-categoryid="">All categories</a></li>
                                </ul>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="hero__search">
                            <div class="hero__search__form">
                                 <form asp-page-handler="Fillter" method = "post">
                                    <div class="hero__search__categories">
                                        All Categories
                                        <span class="arrow_carrot-down"></span>
                                    </div>
                                    <input type="text" placeholder="What do you need?" name="nameproduct">
                                    <button type="submit" class="site-btn">SEARCH</button>
                                </form>
                            </div>
                         
                        </div>
                    </div>
                </div>
            </div>
        </section>
                <section class="breadcrumb-section set-bg" data-setbg="image/breadcrumb.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <div class="breadcrumb__text">
                            <h2  style="color:MediumSeaGreen;">PRODUCT MANAGER</h2>
                             <a asp-page="AddProduct" class="primary-btn">Add Product</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
                <br>
        <div class="container">         
            <table class="table table-striped">
                <thead>
                    <tr>
                                        
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.productlist) {
                if (item.Quantity > 0)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>
                            <a asp-page="UpdateProduct" asp-route-idp="@item.Id" style="color:MediumSeaGreen;">Update</a> | 
                            <a asp-page="Delete" asp-route-idp="@item.Id" style="color:MediumSeaGreen;">Delete</a>
                        </td>
                    </tr>
                }
            }
                </tbody>
            </table>
        </div>